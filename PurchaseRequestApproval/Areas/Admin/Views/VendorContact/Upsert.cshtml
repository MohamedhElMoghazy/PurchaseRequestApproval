<!--Adding or linking the model to the view -->
@model PurchaseRequestApproval.Models.ViewModels.VendorContactVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Add Vendor Contact";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        @if (Model.VendorContact.Id != 0)
        {
            // edit
            title = "Edit Vendor Contact";
            <input type="hidden" asp-for="VendorContact.Id" />

        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorContact.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorContact.Name" class=" form-control" />
                    <span asp-validation-for="VendorContact.Name" class=" text-danger"></span>
                </div>
            </div>

            <!--Adding Contact Email-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorContact.Email"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorContact.Email" class=" form-control" />
                    <span asp-validation-for="VendorContact.Email" class=" text-danger"></span>

                </div>
            </div>

            <!--Adding Contact Email -->
            <!--Adding Contact Phone-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorContact.Phone"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorContact.Phone" class=" form-control" />

                </div>
            </div>

            <!--Adding Contact Phone -->
            <!--Adding Contact Branch-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorContact.Branch"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorContact.Branch" class=" form-control" />


                </div>
            </div>

            <!--Adding Contact Branch -->
            <!--Adding Contact Remark-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorContact.Remark"></label>
                </div>
                <div class="col-8">
                    <!--<input asp-for="VendorContact.Remark" class=" form-control" />-->
                    <textarea asp-for="VendorContact.Remark" class="form-control"></textarea>


                </div>
            </div>

            <!--Adding Contact Remark  -->
            <!--Adding Contact Vendor-->
            <div class="form-group row">
                <div class="col-4">
                    Vendor

                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.VendorContact.VendorId, Model.VendorList, "-Select a Vendor", new { @class = "form-control" })
                    <span asp-validation-for="VendorContact.VendorId" class=" text-danger"></span>

                </div>
            </div>

            <!--Adding Contact Vendor -->


            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.VendorContact.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.VendorContact.Id" />

                    }
                    else
                    {
                        <div class=" row">
                            <div class="col">
                                <button type="submit" onclick="return validateInput()" class="btn btn-primary form-control">Create</button>
                                @*<button type="submit"class="btn btn-primary form-control">Create</button>*@

                            </div>

                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>

                            </div>


                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</form>

