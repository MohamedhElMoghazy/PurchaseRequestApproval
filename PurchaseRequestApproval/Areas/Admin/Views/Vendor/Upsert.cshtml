<!--Adding or linking the model to the view -->
@model PurchaseRequestApproval.Models.Vendor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Add Vendor";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        @if (Model.Id != 0)
        {
            // edit
            title = "Edit Vendor";

        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorName" class=" form-control" />
                    <span asp-validation-for="VendorName" class=" text-danger"></span>
                </div>
            </div>




            <!--Adding Vendore Code-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendoreCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendoreCode" class=" form-control" />
                </div>
            </div>

            <!--Adding Vendore Code -->
            <!--Adding Vendor Address-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorAddress" class=" form-control" />
                </div>
            </div>

            <!--Adding Vendor Address -->
            <!--Adding Vendor Phone-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VendorPhone"></label>
                </div>
                <div class="col-8">
                    <input asp-for="VendorPhone" class=" form-control" />
                </div>
            </div>

            <!--Adding Vendor Phone -->
            <!--Adding Sales Contact Name-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SalesContactName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SalesContactName" class=" form-control" />
                </div>
            </div>

            <!--Adding Sales Contact Name -->
            <!--Adding Sales ContactEmail-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SalesContactEmail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SalesContactEmail" class=" form-control" />
                </div>
            </div>

            <!--ASales ContactEmail -->
            <!--Adding Account ContactName-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AccountContactName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AccountContactName" class=" form-control" />
                </div>
            </div>

            <!--Account ContactName -->
            <!--Adding Acc ContactEmail-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AccContactEmail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AccContactEmail" class=" form-control" />
                </div>
            </div>

            <!--Acc ContactEmail -->
            <!--Adding Registered Vendor-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RegVendor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="RegVendor" class=" form-control" />
                </div>
            </div>

            <!--Registered Vendor -->








            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.Id" />

                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />

                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}