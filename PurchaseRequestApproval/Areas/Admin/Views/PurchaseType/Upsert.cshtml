<!--Adding or linking the model to the view -->
@model PurchaseRequestApproval.Models.PurchaseType 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Purchase Type";
}

    <form method="post">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
            @if (Model.Id != 0)
            {
                // edit
                title = "Edit Purchase Type";

             }
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PurcahseTypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PurcahseTypeName" class=" form-control" />
                        <span asp-validation-for="PurcahseTypeName" class=" text-danger"></span>
                    </div>
                </div>

                <!--Adding code number-->
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PurcahseCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PurcahseCode" class=" form-control" />
                        <span asp-validation-for="PurcahseCode" class=" text-danger"></span>
                    </div>
                </div>

                <!--Adding code number -->

                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <partial name="_EditAndBackToListButton" model="Model.Id" />

                        }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />

                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
